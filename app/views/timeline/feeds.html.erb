<div class = "container">
  <h3> TimeLine </h3>
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="2"></th>
    </tr>
  
    <% @user_articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text.truncate(10) %></td>
        <td><%= link_to 'Expand', expand_path(id: article.id, user_id: article.user_id), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </table>

  <br/>
  <br/>
  <%= link_to 'Back', user_path(current_user.id), class: 'btn btn-primary' %>
  

</div>