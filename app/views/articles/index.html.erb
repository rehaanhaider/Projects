<div class = "container">
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="2"></th>
      <th colspan="2"></th>
      <th colspan="2"></th>

    </tr>
  
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', article_path(article), class: 'btn btn-primary',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

  <br/>
  <br/>
  <%= link_to 'Back', user_path(current_user.id), class: 'btn btn-primary' %>
  <%= link_to 'New Post', new_article_path, class: 'btn btn-primary' %>


</div>